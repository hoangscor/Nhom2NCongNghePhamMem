    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            scroll-behavior: smooth;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #fff;
            border-bottom: 1px solid #ddd;
        }

            .header img {
                width: 120px;
            }

        .nav-links {
            display: flex;
            gap: 20px;
        }

            .nav-links a {
                text-decoration: none;
                color: #333;
                font-weight: bold;
            }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        .services-menu {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
        }

